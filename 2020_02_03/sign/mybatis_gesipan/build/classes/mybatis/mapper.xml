<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="abc">  
<!-- 여기안에 select insert문 장 들어감 -->
<select id="information" resultType="dto">select*from infomation;</select>
<insert id="insert" parameterType="dto">insert into infomation values(#{id},#{name},#{password}); </insert>
<delete id="delete" parameterType="String">delete from infomation where id=#{ac}; </delete>
<update id="update" parameterType="dto">UPDATE infomation SET password=#{password} where id=#{id};  </update>
</mapper>
